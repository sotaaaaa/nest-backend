  "scripts": {
    "prepare": "husky install",
    "gen:ts": "sh scripts/gen-proto-ts.sh && sh scripts/gen-schema-ts.sh",
    "build": "npx nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "npx nest start",
    "start:dev": "npx nest start --watch",
    "start:debug": "npx nest start --debug --watch",
    "start:watch": "chokidar '**/*.proto' '**/*.schema.ts' -c 'yarn run gen:ts'",
    "check:type": "tsc --project tsconfig.json --noEmit",
    "lint": "eslint . --ext ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage && cat ./coverage/lcov.info | codacy-coverage --token a5ea7c309f7543a3b7cfc662c1c88d67 --language typescript",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/service-gateway/apps/signals/dfour-microservice-backend/test/jest-e2e.json",
    "docs": "npx compodoc --theme material --output docs -p tsconfig.json -s"
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint . --cache"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:sotaaaaa/nest-backend.git"
  },
  "author": "Sota Tech",
  "license": "ISC",
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "modulePaths": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@skylinetech/core": "<rootDir>/libs/core/src",
      "@skylinetech/protobuf": "<rootDir>/libs/protobuf/src",
      "@skylinetech/plugins": "<rootDir>/libs/plugins/src",
      "@skylinetech/shared": "<rootDir>/libs/shared/src",
      "@skylinetech/types": "<rootDir>/libs/types/src"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format"
    }
  }
}
