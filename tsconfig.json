{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@skylinetech/core": ["libs/core/src"],
      "@skylinetech/core/*": ["libs/core/src/*"],
      "@skylinetech/protobuf": ["libs/protobuf/src"],
      "@skylinetech/protobuf/*": ["libs/protobuf/src/*"],
      "@skylinetech/plugins": ["libs/plugins/src"],
      "@skylinetech/plugins/*": ["libs/plugins/src/*"],
      "@skylinetech/shared": ["libs/shared/src"],
      "@skylinetech/shared/*": ["libs/shared/src/*"],
      "@skylinetech/types": ["libs/types/src"],
      "@skylinetech/types/*": ["libs/types/src/*"]
    }
  }
}
